<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#565656">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Money"
        android:textSize="40sp"
        android:layout_marginTop="5dp"
        android:textColor="#beffffff"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter the receiver's code"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#89ffffff"
        android:textColor="#abffffff"
        android:backgroundTint="#abffffff"
        android:id="@+id/holderReceivingTheAmount"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:id="@+id/amountToBeSent"
        android:textColorHint="#89ffffff"
        android:textColor="#abffffff"
        android:backgroundTint="#abffffff"
        android:layout_gravity="center_horizontal"
        android:hint="Enter the amount"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:text="Send"
        android:id="@+id/sendItFinally"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginBottom="20dp"/>


</LinearLayout>